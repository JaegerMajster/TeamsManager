<Window x:Class="TeamsManager.UI.Views.Configuration.ConfigurationDetectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Konfiguracja TeamsManager" 
        Height="450" Width="550"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Style="{StaticResource BaseWindowStyle}">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/CommonStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <materialDesign:DialogHost DialogTheme="Inherit">
        <Grid>
            <!-- Gradient Background -->
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FF202020" Offset="0"/>
                    <GradientStop Color="#FF252526" Offset="0.5"/>
                    <GradientStop Color="#FF2D2D30" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>

            <!-- Decorative circles -->
            <Canvas>
                <Ellipse Width="200" Height="200" Canvas.Left="-100" Canvas.Top="-50" Opacity="0.03">
                    <Ellipse.Fill>
                        <RadialGradientBrush>
                            <GradientStop Color="#FFFF9800" Offset="0"/>
                            <GradientStop Color="Transparent" Offset="1"/>
                        </RadialGradientBrush>
                    </Ellipse.Fill>
                </Ellipse>
            </Canvas>

            <!-- Main Content Card -->
            <Border Style="{StaticResource InfoCardStyle}" 
                    Margin="40" 
                    VerticalAlignment="Center">
                <Border.Triggers>
                    <EventTrigger RoutedEvent="Loaded">
                        <BeginStoryboard Storyboard="{StaticResource FadeIn}"/>
                    </EventTrigger>
                </Border.Triggers>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Icon and Title -->
                    <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,30">
                        <Grid HorizontalAlignment="Center" Margin="0,0,0,20">
                            <materialDesign:PackIcon Kind="AlertCircle" 
                                                   Width="80" Height="80" 
                                                   HorizontalAlignment="Center"
                                                   Foreground="{StaticResource WarningOrange}">
                                <materialDesign:PackIcon.Effect>
                                    <DropShadowEffect Color="Orange" BlurRadius="20" ShadowDepth="0" Opacity="0.5"/>
                                </materialDesign:PackIcon.Effect>
                            </materialDesign:PackIcon>
                        </Grid>

                        <TextBlock Text="Wymagana konfiguracja" 
                                 Style="{StaticResource PageTitleStyle}"
                                 HorizontalAlignment="Center" 
                                 Margin="0,0,0,8"/>

                        <TextBlock Text="Aplikacja wymaga wstępnej konfiguracji" 
                                 Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                 Foreground="{StaticResource TextSecondary}"
                                 HorizontalAlignment="Center"/>
                    </StackPanel>

                    <!-- Message -->
                    <StackPanel Grid.Row="1" Margin="40,0">
                        <!-- Main error message -->
                        <Border Background="{StaticResource BackgroundDark}" 
                                CornerRadius="8" 
                                Padding="20,16"
                                Margin="0,0,0,20">
                            <TextBlock Style="{StaticResource InstructionTextStyle}"
                                     TextAlignment="Center"
                                     Text="{Binding ErrorMessage}"/>
                        </Border>

                        <!-- Detailed explanation -->
                        <TextBlock Style="{StaticResource InstructionTextStyle}"
                                 TextAlignment="Center"
                                 Margin="0,0,0,8">
                            <Run Text="Aplikacja TeamsManager wymaga konfiguracji połączenia z"/>
                            <Run Text="Microsoft Azure AD" FontWeight="SemiBold"/>
                            <Run Text="aby móc działać poprawnie."/>
                        </TextBlock>

                        <TextBlock Style="{StaticResource InstructionTextStyle}"
                                 TextAlignment="Center">
                            <Run Text="Kreator konfiguracji poprowadzi Cię krok po kroku przez proces rejestracji aplikacji i ustawienia niezbędnych parametrów."/>
                        </TextBlock>

                        <!-- Requirements hint -->
                        <Border Background="{StaticResource AccentBlue}" 
                                CornerRadius="6" 
                                Padding="12,8"
                                Margin="0,20,0,0"
                                Opacity="0.1">
                            <StackPanel>
                                <TextBlock Text="Będziesz potrzebować:" 
                                         Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                         Foreground="{StaticResource AccentBlue}"
                                         FontWeight="Medium"
                                         Margin="0,0,0,4"/>
                                <TextBlock Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                         Foreground="{StaticResource TextSecondary}"
                                         Text="• Dostępu do Azure Portal z uprawnieniami administratora"/>
                                <TextBlock Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                         Foreground="{StaticResource TextSecondary}"
                                         Text="• Około 10-15 minut na konfigurację"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Buttons -->
                    <Grid Grid.Row="2" Margin="40,30,40,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0" 
                                Content="Zamknij" 
                                Style="{StaticResource SecondaryActionButton}"
                                Command="{Binding CloseCommand}"/>

                        <Button Grid.Column="2" 
                                Style="{StaticResource PrimaryActionButton}"
                                Command="{Binding StartConfigurationCommand}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Rozpocznij konfigurację" VerticalAlignment="Center"/>
                                <materialDesign:PackIcon Kind="ArrowRight" 
                                                       VerticalAlignment="Center" 
                                                       Margin="8,0,0,0"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </materialDesign:DialogHost>
</Window>