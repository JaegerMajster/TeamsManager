<Window x:Class="TeamsManager.UI.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="TeamsManager - Logowanie"
        Height="550" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Border CornerRadius="10" Background="#FF1E1E1E" BorderBrush="#FF0078D4" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header with drag capability -->
            <Border Grid.Row="0" Background="#FF0078D4" CornerRadius="10,10,0,0" 
                    MouseLeftButtonDown="Header_MouseLeftButtonDown">
                <Grid Height="40">
                    <TextBlock Text="TeamsManager - Logowanie" 
                               VerticalAlignment="Center" 
                               HorizontalAlignment="Center"
                               Foreground="White" 
                               FontSize="16" 
                               FontWeight="Medium"/>
                    
                    <!-- Close button -->
                    <Button HorizontalAlignment="Right" 
                            VerticalAlignment="Center"
                            Margin="0,0,10,0"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Command="{Binding CancelCommand}"
                            Width="30" Height="30">
                        <materialDesign:PackIcon Kind="Close" Foreground="White"/>
                    </Button>
                </Grid>
            </Border>

            <!-- Main Content -->
            <Grid Grid.Row="1" Margin="40,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Logo/Icon -->
                <materialDesign:PackIcon Grid.Row="0" 
                                       Kind="MicrosoftTeams" 
                                       Width="80" Height="80"
                                       HorizontalAlignment="Center"
                                       Foreground="{StaticResource AccentBlue}"
                                       Margin="0,0,0,20"/>

                <!-- Title -->
                <TextBlock Grid.Row="1" 
                         Text="Zaloguj się do Teams Manager" 
                         FontSize="20" 
                         FontWeight="Medium"
                         HorizontalAlignment="Center"
                         Foreground="White"
                         Margin="0,0,0,10"/>

                <!-- Subtitle -->
                <TextBlock Grid.Row="2" 
                         Text="Użyj konta Microsoft 365" 
                         FontSize="14"
                         HorizontalAlignment="Center"
                         Foreground="#FFB0B0B0"
                         Margin="0,0,0,30"/>

                <!-- Last user info -->
                <Border Grid.Row="3" 
                        Background="#FF2D2D30" 
                        CornerRadius="5" 
                        Padding="10"
                        Margin="0,0,0,20"
                        Visibility="{Binding UserEmail, Converter={StaticResource NullToVisibilityConverter}}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <materialDesign:PackIcon Grid.Column="0" 
                                               Kind="Account" 
                                               VerticalAlignment="Center"
                                               Margin="0,0,10,0"
                                               Foreground="#FFB0B0B0"/>
                        
                        <TextBlock Grid.Column="1" 
                                 Text="{Binding UserEmail}" 
                                 VerticalAlignment="Center"
                                 Foreground="White"/>
                        
                        <Button Grid.Column="2" 
                                Style="{StaticResource MaterialDesignFlatButton}"
                                Command="{Binding ClearSettingsCommand}"
                                ToolTip="Usuń zapisane dane"
                                Width="30" Height="30">
                            <materialDesign:PackIcon Kind="Close" 
                                                   Width="16" Height="16"
                                                   Foreground="#FFB0B0B0"/>
                        </Button>
                    </Grid>
                </Border>

                <!-- Login options -->
                <StackPanel Grid.Row="4" Margin="0,0,0,20">
                    <CheckBox IsChecked="{Binding RememberMe}"
                            Foreground="White"
                            Margin="0,0,0,10">
                        <TextBlock Text="Zapamiętaj mnie" FontSize="14"/>
                    </CheckBox>
                    
                    <CheckBox IsChecked="{Binding AutoLogin}"
                            Foreground="White">
                        <TextBlock Text="Loguj automatycznie przy starcie" FontSize="14"/>
                    </CheckBox>
                </StackPanel>

                <!-- Status message -->
                <TextBlock Grid.Row="5" 
                         Text="{Binding StatusMessage}"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center"
                         Foreground="#FFB0B0B0"
                         TextWrapping="Wrap"
                         Margin="0,10"/>

                <!-- Login button -->
                <Button Grid.Row="6" 
                        Content="Zaloguj się przez Microsoft"
                        Command="{Binding LoginCommand}"
                        IsEnabled="{Binding CanLogin}"
                        Height="48"
                        Style="{StaticResource PrimaryActionButton}"
                        Margin="0,10,0,0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" 
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="5">
                                <Grid>
                                    <!-- Normal content -->
                                    <StackPanel x:Name="normalContent" 
                                              Orientation="Horizontal" 
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center">
                                        <materialDesign:PackIcon Kind="Microsoft" 
                                                               VerticalAlignment="Center"
                                                               Margin="0,0,10,0"/>
                                        <TextBlock Text="{TemplateBinding Content}" 
                                                 VerticalAlignment="Center"/>
                                    </StackPanel>
                                    
                                    <!-- Loading indicator -->
                                    <ProgressBar x:Name="loadingIndicator"
                                               Style="{StaticResource MaterialDesignCircularProgressBar}"
                                               IsIndeterminate="True"
                                               Width="30" Height="30"
                                               Visibility="Collapsed"/>
                                </Grid>
                            </Border>
                            
                            <ControlTemplate.Triggers>
                                <DataTrigger Binding="{Binding IsLoading}" Value="True">
                                    <Setter TargetName="normalContent" Property="Visibility" Value="Collapsed"/>
                                    <Setter TargetName="loadingIndicator" Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>

            <!-- Footer -->
            <Border Grid.Row="2" Background="#FF252526" CornerRadius="0,0,10,10">
                <TextBlock Text="© 2025 Teams Manager" 
                         HorizontalAlignment="Center"
                         Foreground="#FF808080"
                         FontSize="12"
                         Margin="0,10"/>
            </Border>
        </Grid>
    </Border>
</Window> 