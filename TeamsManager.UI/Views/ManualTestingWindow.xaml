<Window x:Class="TeamsManager.UI.Views.ManualTestingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ðŸ§ª Testy Manualne - TeamsManager" 
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="#FF202020">
    
    <Window.Resources>
        <!-- Definicje stylÃ³w dla ciemnego motywu Windows 11 -->
        
        <!-- Styl dla przyciskÃ³w -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#FF2D2D30"/>
            <Setter Property="Foreground" Value="#FFECECEC"/>
            <Setter Property="BorderBrush" Value="#FF3F3F46"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            Margin="15,8"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF3F3F46"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#FF007ACC"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF007ACC"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="#FF656565"/>
                                <Setter TargetName="border" Property="Background" Value="#FF2D2D30"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#FF3F3F46"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Styl dla przycisku gÅ‚Ã³wnego -->
        <Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#FF0078D4"/>
            <Setter Property="BorderBrush" Value="#FF0078D4"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF106EBE"/>
                    <Setter Property="BorderBrush" Value="#FF106EBE"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF005A9E"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Styl dla przycisku Success -->
        <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#FF107C10"/>
            <Setter Property="BorderBrush" Value="#FF107C10"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF0E6E0E"/>
                    <Setter Property="BorderBrush" Value="#FF0E6E0E"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF0C5D0C"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Styl dla przycisku Error -->
        <Style x:Key="ErrorButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#FFD13438"/>
            <Setter Property="BorderBrush" Value="#FFD13438"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFE81123"/>
                    <Setter Property="BorderBrush" Value="#FFE81123"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FFA80000"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Styl dla przycisku Warning -->
        <Style x:Key="WarningButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#FFE3008C"/>
            <Setter Property="BorderBrush" Value="#FFE3008C"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFC5007A"/>
                    <Setter Property="BorderBrush" Value="#FFC5007A"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FFA70068"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="TestCaseStyle" TargetType="ListBoxItem">
            <Setter Property="Background" Value="#FF252526"/>
            <Setter Property="Foreground" Value="#FFECECEC"/>
            <Setter Property="BorderBrush" Value="#FF3F3F46"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="2"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Result}" Value="Pass">
                    <Setter Property="Background" Value="#FF1A4A1A"/>
                    <Setter Property="BorderBrush" Value="#FF107C10"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Result}" Value="Fail">
                    <Setter Property="Background" Value="#FF4A1A1A"/>
                    <Setter Property="BorderBrush" Value="#FFD13438"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Result}" Value="Warning">
                    <Setter Property="Background" Value="#FF4A2A1A"/>
                    <Setter Property="BorderBrush" Value="#FFE3008C"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Result}" Value="Skip">
                    <Setter Property="Background" Value="#FF3A3A1A"/>
                    <Setter Property="BorderBrush" Value="#FFAC8800"/>
                </DataTrigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#FF007ACC"/>
                    <Setter Property="BorderBrush" Value="#FF007ACC"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF3F3F46"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
            <Setter Property="Foreground" Value="#FFECECEC"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>
        
        <Style x:Key="ActionButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <!-- Styl dla TextBox -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#FF1E1E1E"/>
            <Setter Property="Foreground" Value="#FFECECEC"/>
            <Setter Property="BorderBrush" Value="#FF3F3F46"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>

        <!-- Styl dla ListBox -->
        <Style TargetType="ListBox">
            <Setter Property="Background" Value="#FF1E1E1E"/>
            <Setter Property="BorderBrush" Value="#FF3F3F46"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Styl dla ProgressBar -->
        <Style TargetType="ProgressBar">
            <Setter Property="Background" Value="#FF3F3F46"/>
            <Setter Property="Foreground" Value="#FF0078D4"/>
            <Setter Property="BorderBrush" Value="#FF3F3F46"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Styl dla ScrollViewer -->
        <Style TargetType="ScrollViewer">
            <Setter Property="Background" Value="#FF1E1E1E"/>
        </Style>

        <!-- Styl dla Expander -->
        <Style TargetType="Expander">
            <Setter Property="Background" Value="#FF1E1E1E"/>
            <Setter Property="BorderBrush" Value="#FF3F3F46"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="#FFECECEC"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Expander">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <DockPanel>
                                <ToggleButton x:Name="HeaderSite" 
                                              DockPanel.Dock="Top"
                                              IsChecked="{Binding Path=IsExpanded, RelativeSource={RelativeSource TemplatedParent}}"
                                              Background="#FF2D2D30" 
                                              Foreground="#FFECECEC"
                                              BorderThickness="0"
                                              Padding="10,8"
                                              HorizontalContentAlignment="Left">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="â–¶" x:Name="Arrow" Margin="0,0,8,0" 
                                                   RenderTransformOrigin="0.5,0.5">
                                            <TextBlock.RenderTransform>
                                                <RotateTransform Angle="0"/>
                                            </TextBlock.RenderTransform>
                                        </TextBlock>
                                        <ContentPresenter ContentSource="Header"/>
                                    </StackPanel>
                                </ToggleButton>
                                <ContentPresenter x:Name="ExpandSite" Visibility="Collapsed" Margin="10"/>
                            </DockPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsExpanded" Value="True">
                                <Setter TargetName="ExpandSite" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="Arrow" Property="RenderTransform">
                                    <Setter.Value>
                                        <RotateTransform Angle="90"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

