<Window x:Class="TeamsManager.UI.Views.ManualTestingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="🧪 Testy Manualne - TeamsManager" 
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="#FF202020">
    
    <Window.Resources>
        <!-- Definicje stylów dla ciemnego motywu Windows 11 -->
        
        <!-- Styl dla przycisków -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#FF2D2D30"/>
            <Setter Property="Foreground" Value="#FFECECEC"/>
            <Setter Property="BorderBrush" Value="#FF3F3F46"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            Margin="15,8"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF3F3F46"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#FF007ACC"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF007ACC"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="#FF656565"/>
                                <Setter TargetName="border" Property="Background" Value="#FF2D2D30"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#FF3F3F46"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Styl dla przycisku głównego -->
        <Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#FF0078D4"/>
            <Setter Property="BorderBrush" Value="#FF0078D4"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF106EBE"/>
                    <Setter Property="BorderBrush" Value="#FF106EBE"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF005A9E"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Styl dla przycisku Success -->
        <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#FF107C10"/>
            <Setter Property="BorderBrush" Value="#FF107C10"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF0E6E0E"/>
                    <Setter Property="BorderBrush" Value="#FF0E6E0E"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF0C5D0C"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Styl dla przycisku Error -->
        <Style x:Key="ErrorButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#FFD13438"/>
            <Setter Property="BorderBrush" Value="#FFD13438"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFE81123"/>
                    <Setter Property="BorderBrush" Value="#FFE81123"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FFA80000"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Styl dla przycisku Warning -->
        <Style x:Key="WarningButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#FFE3008C"/>
            <Setter Property="BorderBrush" Value="#FFE3008C"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFC5007A"/>
                    <Setter Property="BorderBrush" Value="#FFC5007A"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FFA70068"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="TestCaseStyle" TargetType="ListBoxItem">
            <Setter Property="Background" Value="#FF252526"/>
            <Setter Property="Foreground" Value="#FFECECEC"/>
            <Setter Property="BorderBrush" Value="#FF3F3F46"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="2"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Result}" Value="Pass">
                    <Setter Property="Background" Value="#FF1A4A1A"/>
                    <Setter Property="BorderBrush" Value="#FF107C10"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Result}" Value="Fail">
                    <Setter Property="Background" Value="#FF4A1A1A"/>
                    <Setter Property="BorderBrush" Value="#FFD13438"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Result}" Value="Warning">
                    <Setter Property="Background" Value="#FF4A2A1A"/>
                    <Setter Property="BorderBrush" Value="#FFE3008C"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Result}" Value="Skip">
                    <Setter Property="Background" Value="#FF3A3A1A"/>
                    <Setter Property="BorderBrush" Value="#FFAC8800"/>
                </DataTrigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#FF007ACC"/>
                    <Setter Property="BorderBrush" Value="#FF007ACC"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF3F3F46"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
            <Setter Property="Foreground" Value="#FFECECEC"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>
        
        <Style x:Key="ActionButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <!-- Styl dla TextBox -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#FF1E1E1E"/>
            <Setter Property="Foreground" Value="#FFECECEC"/>
            <Setter Property="BorderBrush" Value="#FF3F3F46"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>

        <!-- Styl dla ListBox -->
        <Style TargetType="ListBox">
            <Setter Property="Background" Value="#FF1E1E1E"/>
            <Setter Property="BorderBrush" Value="#FF3F3F46"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Styl dla ProgressBar -->
        <Style TargetType="ProgressBar">
            <Setter Property="Background" Value="#FF3F3F46"/>
            <Setter Property="Foreground" Value="#FF0078D4"/>
            <Setter Property="BorderBrush" Value="#FF3F3F46"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Styl dla ScrollViewer -->
        <Style TargetType="ScrollViewer">
            <Setter Property="Background" Value="#FF1E1E1E"/>
        </Style>

        <!-- Styl dla Expander -->
        <Style TargetType="Expander">
            <Setter Property="Background" Value="#FF1E1E1E"/>
            <Setter Property="BorderBrush" Value="#FF3F3F46"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="#FFECECEC"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Expander">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <DockPanel>
                                <ToggleButton x:Name="HeaderSite" 
                                              DockPanel.Dock="Top"
                                              IsChecked="{Binding Path=IsExpanded, RelativeSource={RelativeSource TemplatedParent}}"
                                              Background="#FF2D2D30" 
                                              Foreground="#FFECECEC"
                                              BorderThickness="0"
                                              Padding="10,8"
                                              HorizontalContentAlignment="Left">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="▶" x:Name="Arrow" Margin="0,0,8,0" 
                                                   RenderTransformOrigin="0.5,0.5">
                                            <TextBlock.RenderTransform>
                                                <RotateTransform Angle="0"/>
                                            </TextBlock.RenderTransform>
                                        </TextBlock>
                                        <ContentPresenter ContentSource="Header"/>
                                    </StackPanel>
                                </ToggleButton>
                                <ContentPresenter x:Name="ExpandSite" Visibility="Collapsed" Margin="10"/>
                            </DockPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsExpanded" Value="True">
                                <Setter TargetName="ExpandSite" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="Arrow" Property="RenderTransform">
                                    <Setter.Value>
                                        <RotateTransform Angle="90"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.Background>
            <!-- Gradient tła -->
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FF1E1E1E" Offset="0"/>
                <GradientStop Color="#FF2D2D30" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="500"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Lista testów ZMIENNA NA MENU KATEGORYCZNE -->
        <Border Grid.Column="0" Background="#FF252526" CornerRadius="8" Margin="20" BorderBrush="#FF3F3F46" BorderThickness="1">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Nagłówek z hamburger -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                    <Button Name="HamburgerButton" Content="☰" Width="40" Height="40" 
                            FontSize="20" Style="{StaticResource ModernButton}" Click="HamburgerButton_Click"/>
                    <TextBlock Text="🧪 Testy Systemu" Style="{StaticResource HeaderStyle}" 
                               FontSize="18" VerticalAlignment="Center" Margin="10,0,0,0"/>
                </StackPanel>
                
                <!-- Informacje o użytkowniku -->
                <StackPanel Grid.Row="1" Margin="0,10,0,10">
                    <TextBlock Name="UserInfoText" Text="Użytkownik: Niezalogowany" 
                               Foreground="#FF969696" FontSize="12"/>
                    <TextBlock Name="SessionInfoText" Text="" 
                               Foreground="#FF969696" FontSize="12"/>
                </StackPanel>
                
                <!-- Statystyki -->
                <StackPanel Grid.Row="2" Margin="0,5,0,10" Background="#FF1E1E1E">
                    <TextBlock Name="StatsText" Text="Łącznie: 0 | ✅ 0 | ❌ 0 | ⚠️ 0 | ⏭️ 0" 
                               FontWeight="SemiBold" Margin="10,10,10,5" Foreground="#FFECECEC"/>
                    <ProgressBar Name="ProgressBar" Height="8" Maximum="100" Value="0" Margin="10,0,10,10"/>
                </StackPanel>

                <!-- MENU KATEGORII TESTÓW -->
                <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto">
                    <StackPanel Name="TestCategoriesPanel">
                        
                        <!-- KATEGORIA: Uwierzytelnianie i Autoryzacja -->
                        <Expander Name="AuthCategoryExpander" Header="🔐 Uwierzytelnianie i Autoryzacja" 
                                  IsExpanded="True" Margin="0,5" Background="#FF1E1E1E" Foreground="#FFECECEC">
                            <Expander.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" FontWeight="Bold" FontSize="14"/>
                                </DataTemplate>
                            </Expander.HeaderTemplate>
                            <ListBox Name="AuthTestsList" Background="Transparent" BorderThickness="0" 
                                     SelectionChanged="TestCategoryList_SelectionChanged" Tag="Auth">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Margin="5">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding ResultIcon}" FontSize="14" Margin="0,0,8,0"/>
                                                <TextBlock Text="{Binding Id}" FontWeight="Bold" Margin="0,0,5,0" Foreground="#FFECECEC"/>
                                                <Border Background="#FF3F3F46" Margin="5,0" CornerRadius="2" Padding="3,1">
                                                    <TextBlock Text="{Binding Priority}" FontSize="9" Foreground="#FF969696"/>
                                                </Border>
                                            </StackPanel>
                                            <TextBlock Text="{Binding Name}" FontWeight="Normal" Margin="16,2,0,0" 
                                                       Foreground="#FFECECEC" TextWrapping="Wrap"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Expander>

                        <!-- KATEGORIA: API Microsoft Graph -->
                        <Expander Name="GraphApiCategoryExpander" Header="🌐 API Microsoft Graph" 
                                  IsExpanded="False" Margin="0,5" Background="#FF1E1E1E" Foreground="#FFECECEC">
                            <Expander.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" FontWeight="Bold" FontSize="14"/>
                                </DataTemplate>
                            </Expander.HeaderTemplate>
                            <ListBox Name="GraphApiTestsList" Background="Transparent" BorderThickness="0" 
                                     SelectionChanged="TestCategoryList_SelectionChanged" Tag="GraphApi">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Margin="5">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding ResultIcon}" FontSize="14" Margin="0,0,8,0"/>
                                                <TextBlock Text="{Binding Id}" FontWeight="Bold" Margin="0,0,5,0" Foreground="#FFECECEC"/>
                                                <Border Background="#FF3F3F46" Margin="5,0" CornerRadius="2" Padding="3,1">
                                                    <TextBlock Text="{Binding Priority}" FontSize="9" Foreground="#FF969696"/>
                                                </Border>
                                            </StackPanel>
                                            <TextBlock Text="{Binding Name}" FontWeight="Normal" Margin="16,2,0,0" 
                                                       Foreground="#FFECECEC" TextWrapping="Wrap"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Expander>

                        <!-- KATEGORIA: PowerShell i Automatyzacja -->
                        <Expander Name="PowerShellCategoryExpander" Header="🔧 PowerShell i Automatyzacja" 
                                  IsExpanded="False" Margin="0,5" Background="#FF1E1E1E" Foreground="#FFECECEC">
                            <Expander.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" FontWeight="Bold" FontSize="14"/>
                                </DataTemplate>
                            </Expander.HeaderTemplate>
                            <ListBox Name="PowerShellTestsList" Background="Transparent" BorderThickness="0" 
                                     SelectionChanged="TestCategoryList_SelectionChanged" Tag="PowerShell">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Margin="5">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding ResultIcon}" FontSize="14" Margin="0,0,8,0"/>
                                                <TextBlock Text="{Binding Id}" FontWeight="Bold" Margin="0,0,5,0" Foreground="#FFECECEC"/>
                                                <Border Background="#FF3F3F46" Margin="5,0" CornerRadius="2" Padding="3,1">
                                                    <TextBlock Text="{Binding Priority}" FontSize="9" Foreground="#FF969696"/>
                                                </Border>
                                            </StackPanel>
                                            <TextBlock Text="{Binding Name}" FontWeight="Normal" Margin="16,2,0,0" 
                                                       Foreground="#FFECECEC" TextWrapping="Wrap"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Expander>

                        <!-- KATEGORIA: Zarządzanie Zespołami -->
                        <Expander Name="TeamsManagementCategoryExpander" Header="👥 Zarządzanie Zespołami" 
                                  IsExpanded="False" Margin="0,5" Background="#FF1E1E1E" Foreground="#FFECECEC">
                            <Expander.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" FontWeight="Bold" FontSize="14"/>
                                </DataTemplate>
                            </Expander.HeaderTemplate>
                            <ListBox Name="TeamsManagementTestsList" Background="Transparent" BorderThickness="0" 
                                     SelectionChanged="TestCategoryList_SelectionChanged" Tag="TeamsManagement">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Margin="5">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding ResultIcon}" FontSize="14" Margin="0,0,8,0"/>
                                                <TextBlock Text="{Binding Id}" FontWeight="Bold" Margin="0,0,5,0" Foreground="#FFECECEC"/>
                                                <Border Background="#FF3F3F46" Margin="5,0" CornerRadius="2" Padding="3,1">
                                                    <TextBlock Text="{Binding Priority}" FontSize="9" Foreground="#FF969696"/>
                                                </Border>
                                            </StackPanel>
                                            <TextBlock Text="{Binding Name}" FontWeight="Normal" Margin="16,2,0,0" 
                                                       Foreground="#FFECECEC" TextWrapping="Wrap"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Expander>

                        <!-- KATEGORIA: Interfejs Użytkownika -->
                        <Expander Name="UiCategoryExpander" Header="🖥️ Interfejs Użytkownika" 
                                  IsExpanded="False" Margin="0,5" Background="#FF1E1E1E" Foreground="#FFECECEC">
                            <Expander.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" FontWeight="Bold" FontSize="14"/>
                                </DataTemplate>
                            </Expander.HeaderTemplate>
                            <ListBox Name="UiTestsList" Background="Transparent" BorderThickness="0" 
                                     SelectionChanged="TestCategoryList_SelectionChanged" Tag="UI">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Margin="5">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding ResultIcon}" FontSize="14" Margin="0,0,8,0"/>
                                                <TextBlock Text="{Binding Id}" FontWeight="Bold" Margin="0,0,5,0" Foreground="#FFECECEC"/>
                                                <Border Background="#FF3F3F46" Margin="5,0" CornerRadius="2" Padding="3,1">
                                                    <TextBlock Text="{Binding Priority}" FontSize="9" Foreground="#FF969696"/>
                                                </Border>
                                            </StackPanel>
                                            <TextBlock Text="{Binding Name}" FontWeight="Normal" Margin="16,2,0,0" 
                                                       Foreground="#FFECECEC" TextWrapping="Wrap"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Expander>

                    </StackPanel>
                </ScrollViewer>

                <!-- Przyciski akcji -->
                <StackPanel Grid.Row="4" Orientation="Vertical" Margin="0,15,0,0">
                    <Button Name="BackToMainBtn" Content="⬅️ Powrót do głównego okna" Click="BackToMain_Click" Style="{StaticResource PrimaryButton}"/>
                    <StackPanel Orientation="Horizontal">
                        <Button Name="LoadTestsBtn" Content="🔄 Załaduj" Click="LoadTests_Click" Style="{StaticResource ActionButtonStyle}" Margin="0,0,5,0"/>
                        <Button Name="SaveResultsBtn" Content="💾 Zapisz" Click="SaveResults_Click" Style="{StaticResource ActionButtonStyle}" Margin="5,0,0,0"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Button Name="GenerateReportBtn" Content="📊 Raport" Click="GenerateReport_Click" Style="{StaticResource ActionButtonStyle}" Margin="0,0,5,0"/>
                        <Button Name="OpenReportBtn" Content="📄 Otwórz" Click="OpenReport_Click" Style="{StaticResource ActionButtonStyle}" Margin="5,0,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="#FF3F3F46"/>

        <!-- Szczegóły testu -->
        <Border Grid.Column="2" Background="#FF252526" CornerRadius="8" Margin="20" BorderBrush="#FF3F3F46" BorderThickness="1">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="200"/>  <!-- Większe pole na wyniki testów -->
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="120"/>  <!-- Notatki na końcu -->
                </Grid.RowDefinitions>

                <!-- Nagłówek testu -->
                <StackPanel Grid.Row="0">
                    <TextBlock Name="TestTitle" Text="Wybierz test z listy" Style="{StaticResource HeaderStyle}" FontSize="20"/>
                    <TextBlock Name="TestDescription" Text="" TextWrapping="Wrap" Margin="0,5,0,10" Foreground="#FF969696"/>
                </StackPanel>

                <!-- API Endpoint (jeśli dostępny) -->
                <StackPanel Grid.Row="1" Name="ApiEndpointPanel" Visibility="Collapsed" Margin="0,0,0,10">
                    <TextBlock Text="🌐 Endpoint API:" FontWeight="Bold" Margin="0,0,0,5" Foreground="#FFECECEC"/>
                    <TextBox Name="ApiEndpointText" IsReadOnly="True" Background="#FF1E1E1E" Margin="0"/>
                </StackPanel>

                <!-- Kroki testu -->
                <StackPanel Grid.Row="2">
                    <TextBlock Text="📝 Kroki do wykonania:" Style="{StaticResource HeaderStyle}"/>
                    <ScrollViewer MaxHeight="300" VerticalScrollBarVisibility="Auto">
                        <ItemsControl Name="TestStepsList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="0,3">
                                        <TextBlock Text="{Binding StepNumber}" FontWeight="Bold" Margin="0,0,10,0" Width="25" Foreground="#FF0078D4"/>
                                        <TextBlock Text="{Binding StepText}" TextWrapping="Wrap" Foreground="#FFECECEC"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </StackPanel>

                <!-- Oczekiwany rezultat -->
                <StackPanel Grid.Row="3" Margin="0,10,0,10">
                    <TextBlock Text="🎯 Oczekiwany rezultat:" Style="{StaticResource HeaderStyle}"/>
                    <Border Background="#FF1E1E1E" BorderBrush="#FF007ACC" BorderThickness="1" Margin="0,5" CornerRadius="4">
                        <TextBlock Name="ExpectedResultText" Text="" TextWrapping="Wrap" Margin="10" Foreground="#FFECECEC"/>
                    </Border>
                </StackPanel>

                <!-- DUŻE POLE WYNIKÓW TESTÓW - NAD PRZYCISKAMI -->
                <StackPanel Grid.Row="4" Margin="0,10,0,10">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock Text="📊 Wynik testu:" Style="{StaticResource HeaderStyle}"/>
                        <TextBlock Name="ExecutionStatus" Text="" Margin="20,0,0,0" 
                                   FontWeight="Bold" Foreground="#FF0078D4"/>
                    </StackPanel>
                    <Border Background="#FF1E1E1E" BorderBrush="#FF007ACC" BorderThickness="2" CornerRadius="4">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="5">
                            <TextBox Name="TestResultTextBox" Background="Transparent" BorderThickness="0" 
                                     IsReadOnly="True" TextWrapping="Wrap" Foreground="#FFECECEC" FontFamily="Consolas"
                                     Text="Tu pojawią się wyniki wykonanych testów automatycznych..." 
                                     MinHeight="180" VerticalAlignment="Stretch"/>
                        </ScrollViewer>
                    </Border>
                </StackPanel>

                <!-- Przyciski wyników OCENY -->
                <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
                    <TextBlock Text="📋 Oceń wynik:" Margin="0,0,15,0" VerticalAlignment="Center" 
                               FontWeight="Bold" Foreground="#FFECECEC"/>
                    <Button Name="PassBtn" Content="✅ ZALICZONY" Foreground="White" 
                            Click="MarkResult_Click" Tag="Pass" Style="{StaticResource SuccessButton}"/>
                    <Button Name="FailBtn" Content="❌ NIEZALICZONY" Foreground="White" 
                            Click="MarkResult_Click" Tag="Fail" Style="{StaticResource ErrorButton}"/>
                    <Button Name="WarningBtn" Content="⚠️ Z UWAGAMI" Foreground="White" 
                            Click="MarkResult_Click" Tag="Warning" Style="{StaticResource WarningButton}"/>
                    <Button Name="SkipBtn" Content="⏭️ POMINIĘTY" Foreground="White" 
                            Click="MarkResult_Click" Tag="Skip" Style="{StaticResource ModernButton}"/>
                </StackPanel>

                <!-- Notatki na samym dole -->
                <StackPanel Grid.Row="6" Margin="0,10,0,0">
                    <TextBlock Text="📝 Notatki i obserwacje:" Style="{StaticResource HeaderStyle}"/>
                    <Border Background="#FF1E1E1E" BorderBrush="#FF3F3F46" BorderThickness="1" CornerRadius="4">
                        <TextBox Name="NotesTextBox" AcceptsReturn="True" TextWrapping="Wrap" 
                                 VerticalScrollBarVisibility="Auto" Margin="5" Background="Transparent" 
                                 BorderThickness="0" MinHeight="90" Foreground="#FFECECEC"
                                 Text="Wpisz tutaj swoje obserwacje, uwagi lub dodatkowe informacje..."/>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
