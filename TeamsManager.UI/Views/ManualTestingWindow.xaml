                                                <TextBlock Text="{Binding Id}" FontWeight="Bold" Margin="0,0,5,0" Foreground="#FFECECEC"/>
                                                <Border Background="#FF3F3F46" Margin="5,0" CornerRadius="2" Padding="3,1">
                                                    <TextBlock Text="{Binding Priority}" FontSize="9" Foreground="#FF969696"/>
                                                </Border>
                                            </StackPanel>
                                            <TextBlock Text="{Binding Name}" FontWeight="Normal" Margin="16,2,0,0" 
