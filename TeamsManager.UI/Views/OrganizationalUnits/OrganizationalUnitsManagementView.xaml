<UserControl x:Class="TeamsManager.UI.Views.OrganizationalUnits.OrganizationalUnitsManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:organizationalUnits="clr-namespace:TeamsManager.UI.ViewModels.OrganizationalUnits"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200"
             d:DataContext="{d:DesignInstance Type=organizationalUnits:OrganizationalUnitsManagementViewModel}">

    <UserControl.Resources>
        <!-- Style dla TreeViewItem -->
        <Style x:Key="OrganizationalUnitTreeViewItemStyle" TargetType="TreeViewItem" BasedOn="{StaticResource MaterialDesignTreeViewItem}">
            <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}"/>
            <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}"/>
            <Setter Property="Margin" Value="0,2"/>
        </Style>

        <!-- DataTemplate dla OrganizationalUnitTreeItemViewModel -->
        <HierarchicalDataTemplate DataType="{x:Type organizationalUnits:OrganizationalUnitTreeItemViewModel}" 
                                  ItemsSource="{Binding Children}">
            <Border Background="{DynamicResource MaterialDesignCardBackground}"
                    CornerRadius="4"
                    Padding="12,8"
                    Margin="2">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.1" ShadowDepth="1" BlurRadius="3"/>
                </Border.Effect>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Ikona jednostki organizacyjnej lub działu -->
                    <materialDesign:PackIcon Grid.Column="0" Grid.Row="0"
                                           Kind="{Binding IconKind}"
                                           Width="24" Height="24"
                                           VerticalAlignment="Center"
                                           Margin="0,0,12,0"
                                           Foreground="{Binding IconColor}"/>

                    <!-- Nazwa jednostki/działu -->
                    <TextBlock Grid.Column="1" Grid.Row="0"
                             Text="{Binding DisplayName}"
                             Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                             FontWeight="Medium"
                             VerticalAlignment="Center"/>

                    <!-- Poziom hierarchii (tylko dla jednostek organizacyjnych) -->
                    <Border Grid.Column="2" Grid.Row="0"
                            Background="{DynamicResource MaterialDesignDivider}"
                            CornerRadius="12"
                            Padding="8,4"
                            Margin="8,0"
                            Visibility="{Binding LevelText, Converter={StaticResource NullToVisibilityConverter}}">
                        <TextBlock Text="{Binding LevelText}"
                                 Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                 FontWeight="Medium"/>
                    </Border>

                    <!-- Status aktywności -->
                    <materialDesign:PackIcon Grid.Column="3" Grid.Row="0"
                                           Kind="CheckCircle"
                                           Width="16" Height="16"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource MaterialDesignValidationErrorBrush}"
                                           Visibility="{Binding IsActive, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>

                    <!-- Opis jednostki/działu -->
                    <TextBlock Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="3"
                             Text="{Binding Description}"
                             Style="{StaticResource MaterialDesignBody2TextBlock}"
                             Foreground="{DynamicResource MaterialDesignBodyLight}"
                             TextWrapping="Wrap"
                             Margin="0,4,0,0"
                             Visibility="{Binding Description, Converter={StaticResource NullToVisibilityConverter}}"/>
                </Grid>
            </Border>
        </HierarchicalDataTemplate>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{DynamicResource BackgroundMedium}" 
                Padding="24,16"
                Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Zarządzanie Jednostkami Organizacyjnymi"
                             Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                             Margin="0,0,0,8"/>
                    <TextBlock Text="Hierarchiczny widok struktury organizacyjnej z przypisanymi działami"
                             Style="{StaticResource MaterialDesignBody2TextBlock}"
                             Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                </StackPanel>

                <!-- Statystyki -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <StackPanel Orientation="Horizontal" Margin="0,0,16,0">
                        <materialDesign:PackIcon Kind="FileTree"
                                               Width="16" Height="16"
                                               VerticalAlignment="Center"
                                               Foreground="{DynamicResource TextSecondary}"
                                               Margin="0,0,8,0"/>
                        <TextBlock Text="{Binding TotalOrganizationalUnits}"
                                 Style="{StaticResource MaterialDesignSubtitle2TextBlock}"
                                 Foreground="{DynamicResource TextSecondary}"
                                 VerticalAlignment="Center"/>
                        <TextBlock Text="Jednostek"
                                 Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                 Foreground="{DynamicResource TextSecondary}"
                                 VerticalAlignment="Center"
                                 Margin="4,0,0,0"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,16,0">
                        <materialDesign:PackIcon Kind="Domain" 
                                               Width="16" Height="16"
                                               VerticalAlignment="Center"
                                               Foreground="{DynamicResource TextSecondary}"
                                               Margin="0,0,8,0"/>
                        <TextBlock Text="{Binding TotalDepartments}"
                                 Style="{StaticResource MaterialDesignSubtitle2TextBlock}"
                                 Foreground="{DynamicResource TextSecondary}"
                                 VerticalAlignment="Center"/>
                        <TextBlock Text="Działów"
                                 Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                 Foreground="{DynamicResource TextSecondary}"
                                 VerticalAlignment="Center"
                                 Margin="4,0,0,0"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="CheckCircle" 
                                               Width="16" Height="16"
                                               VerticalAlignment="Center"
                                               Foreground="{DynamicResource TextSecondary}"
                                               Margin="0,0,8,0"/>
                        <TextBlock Text="{Binding ActiveUnits}"
                                 Style="{StaticResource MaterialDesignSubtitle2TextBlock}"
                                 Foreground="{DynamicResource TextSecondary}"
                                 VerticalAlignment="Center"/>
                        <TextBlock Text="Aktywnych"
                                 Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                 Foreground="{DynamicResource TextSecondary}"
                                 VerticalAlignment="Center"
                                 Margin="4,0,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Toolbar -->
        <Border Grid.Row="1" 
                Background="{DynamicResource MaterialDesignCardBackground}"
                Margin="0,0,0,16"
                Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Search Box -->
                <Grid Grid.Column="0" MaxWidth="400" HorizontalAlignment="Left">
                    <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                           materialDesign:HintAssist.Hint="Szukaj jednostek i działów..."
                           materialDesign:TextFieldAssist.HasLeadingIcon="True"
                           materialDesign:TextFieldAssist.LeadingIcon="Magnify"
                           Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                    
                    <Button HorizontalAlignment="Right"
                          VerticalAlignment="Center"
                          Margin="0,0,8,0"
                          Style="{StaticResource MaterialDesignIconButton}"
                          Command="{Binding ClearSearchCommand}"
                          Width="24" Height="24"
                          Visibility="{Binding SearchText, Converter={StaticResource NullToVisibilityConverter}}">
                        <materialDesign:PackIcon Kind="Close" Width="16" Height="16"/>
                    </Button>
                </Grid>

                <!-- Action Buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Command="{Binding ExpandAllCommand}"
                          Style="{StaticResource MaterialDesignFlatButton}"
                          Foreground="{DynamicResource TextSecondary}"
                          Margin="0,0,8,0"
                          ToolTip="Rozwiń wszystkie">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="UnfoldMoreHorizontal" 
                                                   Width="16" Height="16"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,8,0"/>
                            <TextBlock Text="Rozwiń"/>
                        </StackPanel>
                    </Button>

                    <Button Command="{Binding CollapseAllCommand}"
                          Style="{StaticResource MaterialDesignFlatButton}"
                          Foreground="{DynamicResource TextSecondary}"
                          Margin="0,0,8,0"
                          ToolTip="Zwiń wszystkie">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="UnfoldLessHorizontal" 
                                                   Width="16" Height="16"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,8,0"/>
                            <TextBlock Text="Zwiń"/>
                        </StackPanel>
                    </Button>

                    <Button Command="{Binding RefreshCommand}"
                          Style="{StaticResource MaterialDesignFlatButton}"
                          Foreground="{DynamicResource TextSecondary}"
                          Margin="0,0,8,0"
                          ToolTip="Odśwież">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Refresh" 
                                                   Width="16" Height="16"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,8,0"/>
                            <TextBlock Text="Odśwież"/>
                        </StackPanel>
                    </Button>

                    <Button Command="{Binding AddOrganizationalUnitCommand}"
                          ToolTip="Dodaj nową jednostkę organizacyjną">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                                <Setter Property="Background" Value="{StaticResource HeaderGradient}"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp2"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background">
                                            <Setter.Value>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                    <GradientStop Color="#FF37474F" Offset="0"/>
                                                    <GradientStop Color="#FF546E7A" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp4"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Plus" 
                                                   Width="16" Height="16"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,8,0"/>
                            <TextBlock Text="Dodaj Jednostkę"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="2">
                <!-- Loading Overlay -->
                <Grid Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                      Background="{DynamicResource MaterialDesignCardBackground}"
                      Opacity="0.8">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                                   IsIndeterminate="True"
                                   Width="48" Height="48"
                                   Margin="0,0,0,16"/>
                        <TextBlock Text="Ładowanie struktury organizacyjnej..."
                                 Style="{StaticResource MaterialDesignBody1TextBlock}"
                                 HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>

                <!-- TreeView -->
                <TreeView ItemsSource="{Binding OrganizationalUnits}"
                        SelectedItemChanged="TreeView_SelectedItemChanged"
                        ItemContainerStyle="{StaticResource OrganizationalUnitTreeViewItemStyle}"
                        Background="#323232"
                        BorderThickness="0"
                        Padding="16"
                        ScrollViewer.HorizontalScrollBarVisibility="Auto"
                        ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <TreeView.InputBindings>
                        <MouseBinding MouseAction="LeftDoubleClick" Command="{Binding ViewSelectedItemCommand}"/>
                    </TreeView.InputBindings>
                </TreeView>

                <!-- Empty State -->
                <StackPanel HorizontalAlignment="Center" 
                          VerticalAlignment="Center"
                          Visibility="{Binding OrganizationalUnits.Count, Converter={StaticResource EqualToVisibilityConverter}, ConverterParameter=0}">
                    <materialDesign:PackIcon Kind="FolderOutline" 
                                           Width="64" Height="64"
                                           Foreground="{DynamicResource MaterialDesignBodyLight}"
                                           Margin="0,0,0,16"/>
                    <TextBlock Text="Brak jednostek organizacyjnych do wyświetlenia"
                             Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                             Foreground="{DynamicResource MaterialDesignBodyLight}"
                             HorizontalAlignment="Center"
                             Margin="0,0,0,8"/>
                    <TextBlock Text="Kliknij 'Dodaj Jednostkę' aby utworzyć pierwszą jednostkę organizacyjną"
                             Style="{StaticResource MaterialDesignBody2TextBlock}"
                             Foreground="{DynamicResource MaterialDesignBodyLight}"
                             HorizontalAlignment="Center"/>
                </StackPanel>
        </Grid>

        <!-- Context Menu for Selected Item -->
        <Border Grid.Row="3" 
                Background="{DynamicResource MaterialDesignCardBackground}"
                Margin="0,16,0,0"
                Padding="16"
                Visibility="{Binding SelectedItem, Converter={StaticResource NullToVisibilityConverter}}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Selected Item Info -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="{Binding SelectedItem.DisplayName, StringFormat='Wybrano: {0}'}"
                             Style="{StaticResource MaterialDesignSubtitle2TextBlock}"
                             Margin="0,0,0,4"/>
                    <TextBlock Text="{Binding SelectedItem.FullPath}"
                             Style="{StaticResource MaterialDesignCaptionTextBlock}"
                             Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Command="{Binding ViewSelectedItemCommand}"
                          Style="{StaticResource MaterialDesignOutlinedButton}"
                          Foreground="{DynamicResource TextSecondary}"
                          BorderBrush="{DynamicResource TextSecondary}"
                          Margin="0,0,8,0"
                          ToolTip="Podgląd">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Eye" 
                                                   Width="16" Height="16"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,8,0"/>
                            <TextBlock Text="Podgląd"/>
                        </StackPanel>
                    </Button>

                    <Button Command="{Binding EditSelectedItemCommand}"
                          Style="{StaticResource MaterialDesignOutlinedButton}"
                          Foreground="{DynamicResource AccentBlue}"
                          BorderBrush="{DynamicResource AccentBlue}"
                          Margin="0,0,8,0"
                          ToolTip="Edytuj">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Edit" 
                                                   Width="16" Height="16"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,8,0"/>
                            <TextBlock Text="Edytuj"/>
                        </StackPanel>
                    </Button>

                    <Button Command="{Binding DeleteSelectedItemCommand}"
                          Style="{StaticResource MaterialDesignOutlinedButton}"
                          Foreground="{DynamicResource AccentRed}"
                          BorderBrush="{DynamicResource AccentRed}"
                          ToolTip="Usuń">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Delete" 
                                                   Width="16" Height="16"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,8,0"/>
                            <TextBlock Text="Usuń"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Error Message -->
        <materialDesign:Snackbar Grid.Row="3"
                               MessageQueue="{materialDesign:MessageQueue}"
                               VerticalAlignment="Bottom"
                               HorizontalAlignment="Center"
                               Margin="16"/>
    </Grid>
</UserControl>